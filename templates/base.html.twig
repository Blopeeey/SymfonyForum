<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <a class="navbar-brand" href="/">
            <img src="https://www.wame.nl/build/images/tech_vue.png" width="40" height="40" alt="logo">
        </a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home <span class="sr-only"></span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/unacceptedpost/">Own posts <span class="sr-only"></span></a>
                </li>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('easyadmin') }}">EasyAdmin</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('post_index') }}">Post</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('category_index') }}">Category</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('acceptpost') }}">Accept-post</a>
                </li>
                {% endif %}
            </ul>
            <form class="form-inline my-2 my-lg-0">
                {% if app.user %}
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('addpost') }}">Add post<span class=""></span></a>
                        </li>
                    </ul>
                    <a class="btn btn-outline-success my-2 my-sm-0" href="/logout">Logout</a>
                {% else %}
                    <a class="btn btn-outline-success my-2 my-sm-0" href="/login">Login</a>
                    &nbsp;
                    <a class="btn btn-outline-info my-2 my-sm-0" href="/register">Register</a>
                {% endif %}
            </form>
        </div>
    </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
